<!-- Begin State Selector Header -->
<div id="state-selector-header" class="selector-container">
  <span class="selector-text">Shop by state:</span>
  {% include 'state-selector-dropdown' customClass: 'state-dropdown
  state-dropdown-text' customId: 'state-dropdown-header'%}
</div>

<style>
  .selector-container {
    display: none;
    flex-direction: row;
    width: auto;
    height: auto;
    max-height: 2rem;
    align-items: center;
  }

  .selector-text {
    line-height: 35px;
    color: #fff !important;
    font-size: 20px;
    text-transform: uppercase;
    padding: 0 14px;
  }

  .state-dropdown {
    color: white;
    width: auto;
    height: auto;
    background: black;
    padding: 0 1rem;
    max-width: 8rem;
    border: 2px solid white;
    border-radius: 2px;
  }

  .state-dropdown-text {
    color: white;
    text-align-last: center;
    font-size: 20px;
    letter-spacing: 1.7px;
    line-height: 1.5;
    font-family: "league-gothic", sans-serif;
    text-transform: uppercase;
    font-weight: normal;
  }

  .state-dropdown-text option {
    font-size: 10px;
  }

  .button-header {
    background: black;
    color: white;
    border: 1px solid white;
    padding: 0 1rem;
  }

  .button-header:hover,
  .button-header:focus {
    background: white;
    color: black;
    border: 1px solid black;
    cursor: pointer;
  }
</style>

<script>
  function updateHeaderStateSelectorUI() {
    var isValidState = getIsValidUserState(); // state-selector-scripts.liquid
    if (isValidState) {
      $("#state-selector-header").css("display", "none");
    } else {
      $("#state-selector-header").css("display", "flex");
    }
  }

  $(document).ready(function() {
    updateHeaderStateSelectorUI();

    $(document).on("change", "#state-dropdown-header", function() {
      var state = $("#state-dropdown-header").val() || "";
      storeUserState(state); // state-selector-scripts.liquid
    });
  });
</script>
<!-- End State Selector Header -->
